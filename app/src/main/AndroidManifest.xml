<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ba.edu.ibu.stu.chern0.payscan">

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".PayScanApplication"
        android:allowBackup="true"
        android:icon="@mipmap/payscan_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/payscan_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".LogInScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterAccount"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ProductView"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ProductDrawer"
            android:label="@string/title_activity_product_drawer"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ArticleActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CreateArticleActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".QrCodeScanner" />
        <activity
            android:name=".ProductQrCode"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EditProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:screenOrientation="portrait"
            android:name=".TransactionListActivity" />
        <activity
            android:screenOrientation="portrait"
            android:name=".UserProductView" />
    </application>

</manifest>