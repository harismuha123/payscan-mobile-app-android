<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ba.edu.ibu.stu.chern0.payscan">

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".PayScanApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:screenOrientation="portrait"
            android:name=".LogInScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".RegisterAccount" />
        <activity
            android:screenOrientation="portrait"
            android:name=".ProductView" />
        <activity
            android:name=".ProductDrawer"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_product_drawer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:screenOrientation="portrait"
            android:name=".ArticleActivity" />
        <activity
            android:screenOrientation="portrait"
            android:name=".CreateArticleActivity" />
        <activity
            android:screenOrientation="portrait"
            android:name=".QrCodeScanner" />
        <activity
            android:screenOrientation="portrait"
            android:name=".ProductQrCode" />
        <activity
            android:screenOrientation="portrait"
            android:name=".EditProfileActivity" />
    </application>

</manifest>